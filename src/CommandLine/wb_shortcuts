#additional helper functions
function do_operation ()
{
    #use the existence of a short description to denote existence of the function
    if [[ ${global_switch_to_descrip[$1]} != "" ]]
    then
        `switch_to_func_name "$1"` "$@"
        exit 0
    fi
    local maxlength=0
    for switch in "${!global_switch_to_descrip[@]}"
    do
        if [[ "$switch" == "$1"* ]]
        then
            local thislength=`printf '%s' "$switch" | wc -c`
            if (( thislength > maxlength ))
            then
                maxlength=$thislength
            fi
        fi
    done
    if (( maxlength == 0 ))
    then
        error "the switch '$1' does not match any functions"
    fi
    for switch in "${!global_switch_to_descrip[@]}"
    do
        if [[ "$switch" == "$function_switch"* ]]
        then
            printf "%-${maxlength}s   %s\n" "$switch" "${global_switch_to_descrip[$switch]}"
        fi
    done | sort
}

function list_functions ()
{
    local maxlength=0
    for switch in "${!global_switch_to_descrip[@]}"
    do
        local thislength=`printf '%s' "$switch" | wc -c`
        if (( thislength > maxlength ))
        then
            maxlength=$thislength
        fi
    done
    for switch in "${!global_switch_to_descrip[@]}"
    do
        printf "%-${maxlength}s   %s\n" "$switch" "${global_switch_to_descrip[$switch]}"
    done | sort
}

function error ()
{
    echo >&2
    echo "While running:"
    echo "$global_cmd_line" >&2
    echo >&2
    echo "Error: $*" >&2
    echo >&2
    exit 1
}

function check_functions ()
{
    for switch in "${!global_switch_to_descrip[@]}"
    do
        local function_name=`switch_to_func_name "$switch"`
        if [[ `type -t "$function_name"` != 'function' ]]
        then
            echo "ASSERT FAILURE: switch '$switch' does not have matching function '$function_name'"
            exit 1
        fi
    done
}

declare -a global_temporary_files
function add_temporary_files ()
{
    global_temporary_files+=("$@")
}

function cleanup ()
{
    rm -f "${global_temporary_files[@]}" &> /dev/null
}
trap cleanup EXIT

#start the main code, now that all the functions are defined
main "$@"

